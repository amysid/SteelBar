      <li><a href="<%=coatings_path%>"><i class="fa fa-users"></i> <span>Coating Management</span></a></li>
      <li><a href="<%=pods_path%>"><i class="fa fa-users"></i> <span>POD Management</span></a></li>
      <li><a href="<%=custom_premiums_path%>"><i class="fa fa-users"></i> <span>Custom Premium Management</span></a></li>
      <%end%>
    </ul><!-- /.sidebar-menu -->
