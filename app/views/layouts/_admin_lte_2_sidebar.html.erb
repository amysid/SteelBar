      <li><a href="<%=staffs_path%>"><i class="fa fa-users"></i> <span>Staff Management</span></a></li>
      <%end%>
      <li><a href="<%=enquiries_path%>"><i class="fa fa-users"></i> <span>Enquiry Management</span></a></li>
      <li><a href="<%=suppliers_path%>"><i class="fa fa-users"></i> <span>Price List Management</span></a></li>
