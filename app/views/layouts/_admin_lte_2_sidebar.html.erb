      <li><a href="<%=customer_panels_path%>"><i class="fa fa-users"></i> <span>Customer Panel Management</span></a></li>
      <%a = GeneralPanel&.first&.id%>
      <li><a href="<%=edit_general_panel_path(a)%>"><i class="fa fa-users"></i> <span>General Panel Management</span></a></li>
      <li><a href="<%=length_edges_path%>"><i class="fa fa-users"></i> <span>Length Edge Management</span></a></li>
