<div class="row">
    <div class="col-md-10">
        <div class="form-group">
            <label for="exampleInputEmail1">Source</label>
            <%= f.text_field :source,class: "form-control" , placeholder: "Enter Source" %>
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Grade</label>
            <%= f.text_field :grade,class: "form-control" , placeholder: "Enter Grade" %>
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Length Cost Add</label>
            <%= f.text_field :length_cost_add,class: "form-control" , placeholder: "Enter Length Cost Add" %>
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Edge Cost Add</label>
            <%= f.text_field :edge_cost_add,class: "form-control" , placeholder: "Edge Cost Add" %>
        </div>
    </div>
    <div class="col-md-10" style="margin-left: 15px;">
        <%= f.submit "Save" ,class: "btn btn-success"%>
