<section class="custom-wrap">
  <div class="container">
    <div class="Dashboard-section">
      <h4>Add New Supplier</h4>
      <%#= form_with scope: @staff, url: staff_path, id: "new_staff", local: true do |f|%>
      <%= form_with model: @supplier do |f| %>
        <%#= render "form", f: f %>
        <div class="row">
		    <div class="col-md-10">
		        <div class="form-group">
		            <label for="exampleInputEmail1">Supplier Name</label>
		            <%= f.text_field :name,class: "form-control" , placeholder: "Name of the Supplier" %>
		        </div>
		       
		    </div>
		    <div class="col-md-10" style="margin-left: 15px;">
		        <%= f.submit "Save" ,class: "btn btn-success"%>
		        <%= link_to "Cancel", suppliers_path,class: "btn btn-danger" %>
		    </div>
		</div>
      <% end %>
    </div>
  </div>
</section>