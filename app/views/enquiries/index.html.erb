<h1>Enquiry Management</h1>
    

<div class="row">
  <%= form_tag import_enquiries_path, multipart: true do%>
  <div class="form-group" style="float: right;">
    <div class="col-md-2 "  style="margin-right: 120px;"><%=file_field_tag :file, class: 'form-control-file', required: true %></div>
    <div class="col-md-3"><%= submit_tag "Import CSV", class: 'btn btn-primary'%></div>
  </div>
  <%end%>
</div> 




<div class="box box-info">
<%#= form_tag import_admin_users_path, multipart: true, id: "controls-form", class: "shubham" do %>
             <%#= file_field_tag :file, id: "fileinput", accept: ".csv" %>
             <%#= submit_tag "Import" %>
              <%# end %>

<%= form_with scope: :search, url: enquiries_path, method: :get,autocomplete: :off,local: true do |f| %>
       
    <div class="box-body">
        <div class="row">
            <!-- /.col -->
           
            <!-- /.col -->
            <div class="col-md-2">
                <!-- /.form-group -->
                <div class="form-group">
                    <label>Select status:</label>
                    <%#= f.select(:name, options_for_select(Enquiry.order(:name).pluck(:name, :id)),(params.dig :search, :search)) , {:include_blank => "Select Customer Name"}, {:class => "form-control"} ) %>
                    <%= f.select(:name, options_for_select(Enquiry.order(:name).pluck(:name, :id),(params.dig :search, :search)) , {:include_blank => "Select Customer"}, {:class => "form-control"} ) %>

                </div>
            </div>
            <!-- /.form-group -->
            <div class="col-md-2">
                <!-- /.form-group -->
                <div class="form-group">
                    <label>From date:</label>
                    <div class="input-group date">
                        <div class="input-group-addon">
                            <em class="fa fa-calendar"></em>
                        </div>
                       <%= f.text_field :start,class: "form-control datetimepicker_start",placeholder:"Select Date",value: (params.dig :search, :start), autocomplete: :off,data: { provide: 'datepicker'} %>
                    </div>
                </div>
            </div>
            <div class="col-md-2">
                <!-- /.form-group -->
                <div class="form-group">
                    <label>To date:</label>
                    <div class="input-group date">
                        <div class="input-group-addon">
                            <em class="fa fa-calendar"></em>
                        </div>
                       <%= f.text_field :end,class: "form-control datetimepicker_end",placeholder:"Select Date",value: (params.dig :search, :end),data:{provide: 'datepicker'}, :autocomplete => :off %>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <!-- /.form-group -->
                <div class="col-md-6">
                    <div class="form-group">
                        <label>&nbsp;</label>
                        <%= f.submit "Search", class: "btn btn-block btn-primary", title: "Search"%>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label>&nbsp;</label>
                        <%= link_to '<button class="btn btn-block btn-danger" type="button">Cancel</button>'.html_safe ,enquiries_path, title: "Cancel" %>
                    </div>
                </div>
                
                <!-- /.form-group -->
            </div>
              <%= link_to "Download Sample CSV", enquiries_path(format: "csv"), class:"btn btn-success margin-top-25", title: "Download Sample CSV"%> 
            

            <!-- /.col -->
            <!-- /.row -->
        </div>
    </div>
    <% end %>
    <!--Export CSV-->
    <%#= form_tag import_admin_users_path, multipart: true, id: "controls-form" do %>
    <%#= file_field_tag :file, id: "fileinput", accept: ".csv", class:"margin-top-60" %>
    <%#= submit_tag "Import", class:"btn btn-success margin-top-5" %>
    <%# end %>
    <!--Export CSV code finish-->

    <div class="box-body table-responsive ">
        <table class="table table-hover table-bordered">
            <tbody>
                <tr style="background-color: #D9D7D7;">
                    <th>ID</th>
                  <th> Customer Name</th>
                  <th> Source</th>
                  <th> Grade</th>
                    <th> 

Classification
</th>
                  <th> Surface</th>
                  <th> 

Thickness(mm)
</th>
                  <th> 

Width(mm)
</th>
                  <th> Edge</th>
                  <th> Length</th>
                  <th> 

Package Wt
</th>
                  <th> Coating</th>
                  <th> 

Coating Type
</th>
                  <th> Quantity MT</th>
                  <th> Custom Premium</th>
                  <th> Port</th>
                  <th> 

Unit Price(RMB)
</th>
                  <th> 

USD Price
</th>

                </tr>
                <br/>
                 <% if @search.blank? %>
                      <div class="global-heading user-head">No Record Found. </div>
                   <% else %>
                <% @enquiries&.each do |user| %>
                <tr>
                    <td>
                        <%= @sr_no+=1 %>
                    </td>
                    <td>
                        <%= user&.name %>
                    </td>
                    <td>
                        <%= user&.source %>
                      
                    </td>
                    <td>
                        <%= user&.grade %>
                    </td>
                    <td>
                        <%= user&.classification %>
                    </td><td>
                        <%= user&.surface %>
                    </td><td>
                        <%= user&.thick %>
                    </td><td>
                        <%= user&.width %>
                    </td><td>
                        <%= user&.edge %>
                    </td><td>
                        <%= user&.length %>
                    </td><td>
                        <%= user&.package_wt %>
                    </td><td>
                        <%= user&.coating %>
                    </td><td>
                        <%= user&.coating_type %>
                    </td>
                    <td>
                        <%= user&.quantity_mt %>
                    </td>
                    <td>
                        <%= user&.custom_premium %>
                    </td><td>
                        <%= user&.port %>
                    </td><td>
                        <%= user&.unit_price %>
                    </td><td>
                        <%= user&.usd_price %>
                    </td>
                    
                </tr>
                <%end%>
                <%end%>
            </tbody>
        </table>
    </div>
    <!-- /.box-body -->
    <div class="box-footer">
        <div class="digg_pagination pull-right">
                <%= will_paginate @search %>
        </div>
    </div>
</div>
