<div class="row">
  <div class="col-md-10">
    <div class="form-group">
      <label for="exampleInputEmail1">Name</label>
      <%= f.text_field :name,class: "form-control" , placeholder: "Enter Name" %>
    </div>
    <div class="form-group">
      <label for="exampleInputEmail1">Email</label>
      <%= f.text_field :email,class: "form-control" , placeholder: "Enter Email" %>
    </div>
    <div class="form-group">
      <label for="exampleInputEmail1">Container Loading Weight</label>
      <%= f.text_field :container_loading_name,class: "form-control" , placeholder: "Enter Container Loading Weight" %>
    </div>   
  </div>
  <div class="col-md-10" style="margin-left: 15px;">
    <%= f.submit "Save" ,class: "btn btn-success"%>
    <%= link_to "Cancel", customer_panels_path, class: "btn btn-danger" %>
  </div>
</div>
<script>
    $('#customer-panel').validate({
    rules:{
      "customer_panel[name]": {required: true},
      "customer_panel[email]": {required: true},
      "customer_panel[container_loading_name]": {required: true}
    },
    messages: {
      "customer_panel[name]": {required: "*Please Enter Name!"},
      "customer_panel[email]": {required: "*Please Enter Email!"},
      "customer_panel[container_loading_name]": {required: "*Please Enter Container Loading Weight!"}
    },    
  });
</script>