<section class="custom-wrap">
  <div class="container">
    <div class="Dashboard-section">
      <h4>Customer Panel Details</h4>
      <%= form_with scope: @cpd, url: details_update_customer_panels_path, method: :put, id: "cps", local: true do |f|%>
      <div class="card-body">
        <div class="row">
            <div class="col-md-10">
                <div class="form-group">
                    <label for="exampleInputEmail1">Grade</label>
                    <%= f.text_field :grade,class: "form-control"  %>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Surface</label>
                    <%= f.text_field :surface,class: "form-control"  %>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Profit</label>
                    <%= f.text_field :profit,class: "form-control" %>
                </div>
                <div class="form-group">
                    <%= f.hidden_field :cp_id, value: @cpd.id, class: "form-control" %>
                </div>
                <div class="col-md-10" style="margin-left: 15px;">
                    <%= f.submit "Save" ,class: "btn btn-success"%>
                </div>
            </div>
         <% end %>
        </div>
       </div>
    </div>
</section>


  