<section class="content">
  <div class="row">
    <div class="col-md-10">
      <div class="box box-primary">
        <div class="box-header with-border">
          <h1>Edit Profile</h1>
        </div>
        <%= form_with scope: @user, url: update_profile_path(id: @user), role: "form", id: "new_user", local: true do |f| %>
        <div class="box-body">
      
          <div class="form-group">
            <label for="exampleInputEmail1">Name</label>
            <%= f.text_field :username,class: "form-control" , placeholder: "Enter Name" %>
          </div>
          <div class="form-group">
            <label for="exampleInputPassword1">Email</label>
            <%= f.text_field :email,class: "form-control" , placeholder: "Enter Email" %>
          </div>
          <!-- <div class="form-group">
            <label>Gender</label>
            <%#= f.select :gender, options_for_select(gender_options,f.object.gender),{include_blank: "Select Gender"},{class: "form-control", required: true} %>
          </div> -->
        </div>
        <div class="box-footer">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</section>