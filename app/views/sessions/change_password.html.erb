<div class="login-logo">
    <a href="/"><b>KSS</b> Change Password</a>
</div>
<div class="login-box-body">
    <p class="login-box-msg">To start your session</p>
    <%= form_with scope: :user, url: change_password_path(auth_token: params[:auth_token]),id: "session_create" ,local: true do |f| %>
    <div class="form-group has-feedback">
        <%= f.password_field :password, class: 'form-control', autocomplete: 'off',placeholder: "Password" %>
        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
    </div>
    <div class="form-group has-feedback">
        <%= f.password_field :confirm_password, class: 'form-control', autocomplete: 'off',placeholder: "Confirm Password" %>
        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
    </div>
    <div class="row">
        <!-- /.col -->
        <div class="col-xs-4">
            <%= f.submit 'Log in', class: 'btn btn-primary btn-block btn-flat' %>
        </div><!-- /.col -->
        <div class="col-xs-8">
            <%= link_to "Forgot password ?", forgot_password_path, class: 'pull-right'%>
            <!--        <div class="checkbox icheck">
            <label>
              <input type="checkbox"> Remember Me
            </label>
          </div> -->
        </div>
    </div>
    <% end %>
</div><!-- /.login-box-body -->