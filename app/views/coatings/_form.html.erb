<div class="row">
    <div class="col-md-10">
        <div class="form-group">
            <label for="exampleInputEmail1">Coating Type</label>
            <%= f.text_field :coating_type,class: "form-control" , placeholder: "Enter Coating Type" %>
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Coating</label>
            <%= f.text_field :coating,class: "form-control" , placeholder: "Enter Coating" %>
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Cost per sqm</label>
            <%= f.text_field :cost_per_sqm,class: "form-control" , placeholder: "Enter Cost per sqm" %>
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Reading</label>
            <%= f.text_field :reading,class: "form-control" , placeholder: "Enter Reading" %>
        </div>
    </div>
    <div class="col-md-10" style="margin-left: 15px;">
        <%= f.submit "Save" ,class: "btn btn-success"%>
        <%= link_to "Cancel", coatings_path,class: "btn btn-danger" %>
    </div>
</div>