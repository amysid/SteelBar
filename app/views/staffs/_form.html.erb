<div class="row">
    <div class="col-md-10">
        <div class="form-group">
            <label for="exampleInputEmail1">Name</label>
            <%= f.text_field :name,class: "form-control" , placeholder: "Enter Name" %>
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Email</label>
            <%= f.text_field :email,class: "form-control" , placeholder: "Enter Email" %>
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Password</label>
            <%= f.password_field :password,class: "form-control" , placeholder: "Enter Password" %>
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Confirmation Password</label>
            <%= f.password_field :password_confirmation,class: "form-control" , placeholder: "Confirmation Password" %>
        </div>
    </div>
    <div class="col-md-10" style="margin-left: 15px;">
        <%= f.submit "Save" ,class: "btn btn-success"%>
        <%= link_to "Cancel", staffs_path,class: "btn btn-danger" %>
    </div>
</div>