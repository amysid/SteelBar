        <div class="form-group">
            <label for="exampleInputEmail1">Export Port</label>
            <%= f.text_field :export_pod,class: "form-control" , placeholder: "Enter Export Port" %>
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Freight/20” Container Cost Add</label>
