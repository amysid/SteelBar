<h1>Surface Management</h1>
    

<div class="row">
  <%= form_tag import_surfaces_path, multipart: true do%>
  <div class="form-group" style="float: right;">
    <div class="col-md-2 "  style="margin-right: 120px;"><%=file_field_tag :file, class: 'form-control-file', required: true %></div>
    <div class="col-md-3"><%= submit_tag "Import CSV", class: 'btn btn-primary'%></div>
  </div>
  <%end%>
</div> 




<div class="box box-info">
       
    <div class="box-body">
        <div class="row">
          <div class="col-md-12">
            
            <div class="form-group" style="text-align: right;">
                        <%= link_to "Add New Surface", new_surface_path, class:"btn btn-success", title: "Add Customer"%> 
                        
                        <%= link_to "Download Sample CSV", surfaces_path(format: "csv"), class:"btn btn-success", title: "Download Sample CSV"%> 
                      
           </div>
        </div>
      </div>
    </div>

    <div class="box-body table-responsive ">
        <table class="table table-hover table-bordered">
            <tbody>
                <tr style="background-color: #D9D7D7;">
                    <th>Sr_No.</th>
                  <th> Grade</th>
                  <th> Surface</th>
                  <th> Cost</th>
                  <th> Unit</th>
                  <th colspan="3">Actions</th>
                  
                </tr>
                <br/>
                 <% if @surface.blank? %>
                      <div class="global-heading user-head">No Record Found. </div>
                   <% else %>
                <% @surface&.each do |m| %>
                <tr>
                  <td><%= @s_no += 1 %></td>
                  <td><%= m.try(:grade)%></td>
                  <td><%= m.try(:surface)%></td>
                  <td><%= m.try(:cost)%></td>
                  <td><%= m.try(:unit)%></td>
                   <td>
                    <%= link_to '<em class="fa fa-edit" aria-hidden="true"></em>'.html_safe, edit_surface_path(m),:class=>"btn btn-success", method: :get, title: "Edit" %>
                                      
                    <%= link_to '<em class="fa fa-trash" aria-hidden="true"></em>'.html_safe,  surface_path(m), method: :delete,:class=>"btn btn-danger",title: "Delete", data: {confirm: 'Are you sure to delete?' }%>
                
                  </td>
                </tr>
                <%end%>
                <%end%>
            </tbody>
        </table>
    </div>
    <!-- /.box-body -->
    <div class="box-footer">
        <div class="digg_pagination pull-right">
                <%= will_paginate @surface %>
        </div>
    </div>
</div>
