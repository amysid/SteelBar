<div class="row">
    <div class="col-md-10">
        <div class="form-group">
            <label for="exampleInputEmail1">Grade</label>
            <%= f.text_field :grade,class: "form-control surface" , placeholder: "Enter Grade" %>
            <span class="lblError-s-grade" style="color: red"></span>
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Surface</label>
            <%= f.text_field :surface,class: "form-control" , placeholder: "Enter Surface" %>
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Cost</label>
            <%= f.text_field :cost,class: "form-control surface" , placeholder: "Enter Cost" %>
            <span class="lblError-s-cost" style="color: red"></span>
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Unit</label>
            <%= f.text_field :unit,class: "form-control" , placeholder: "Enter Unit" %>
        </div>
    </div>
    <div class="col-md-10" style="margin-left: 15px;">
        <%= f.submit "Save" ,class: "btn btn-success"%>
        <%= link_to "Cancel", surfaces_path,class: "btn btn-danger" %>
    </div>
</div>